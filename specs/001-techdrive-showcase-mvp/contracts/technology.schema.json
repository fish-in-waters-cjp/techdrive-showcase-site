{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Technology",
  "description": "TechDrive 核心技術資料結構",
  "type": "object",
  "required": ["key", "title", "summary", "description", "icon", "benefits"],
  "properties": {
    "key": {
      "type": "string",
      "description": "技術唯一識別碼",
      "pattern": "^[a-z_]+$",
      "examples": ["smart_connect", "active_clamps", "eco_boost"]
    },
    "title": {
      "type": "string",
      "description": "技術名稱",
      "examples": ["Smart Connect", "Active Clamps", "EcoBoost Drive"]
    },
    "summary": {
      "type": "string",
      "description": "一句話賣點（≤50 字）",
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "description": "詳細說明（2-3 行）",
      "maxLength": 300
    },
    "icon": {
      "type": "string",
      "description": "SVG 圖示路徑",
      "pattern": "^/assets/tech/.+\\.svg$"
    },
    "benefits": {
      "type": "array",
      "description": "優勢要點（3-5 項）",
      "minItems": 3,
      "maxItems": 5,
      "items": {
        "type": "string"
      }
    }
  }
}
